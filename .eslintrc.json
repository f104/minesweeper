{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 6
    },
    "extends": "eslint:recommended",
    "rules": {
        "strict": ["error", "global"],
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "no-var": ["error"]
    }
}
